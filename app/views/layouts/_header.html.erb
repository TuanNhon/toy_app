<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".sample"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home_page"), home_path %></li>
        <li><%= link_to t(".about_page"), about_path %></li>
        <li><%= link_to t(".help_page"), help_path %></li>
        <li><%= link_to t(".contact_page"), contact_path %></li>
        <% if logged_in? %>
          <li><%= link_to t(".users_page"), "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t ".account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile_page"), current_user %></li>
              <li><%= link_to t(".setting_page"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".logout_page"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".login_page"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
